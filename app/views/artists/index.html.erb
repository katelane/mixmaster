<h1>All Artists</h2>
  <p>use for listing and editing, display alphabetically</p>

  <ul id="artists">
    <% @artists.each do |artist| %>
    <li>
      <h2><%= link_to artist.title, artist_path(artist) %></h2>
      <% if logged_in? %>
      <%= link_to "DELETE", artist_path(tag), method: :delete, data: {confirm: "Do you really want to delete this artist?"} %>
      <% end %>
      <hr>
    </li>
    <% end %>
  </ul>
  <br>
  <p><%= link_to "<< Back to Artist List", artists_path %></p>
  
